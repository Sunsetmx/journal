---
const { title, subtitle } = Astro.props;
---

<section class="hero-section">
  <div class="hero-container">
    <div class="hero-content">
      <h1 class="hero-title">{title}</h1>
      <p class="hero-subtitle">{subtitle}</p>
      <div class="hero-actions">
        <a href="/series" class="button">Explorar Series</a>
        <a href="/leak" class="button button--secondary">Enviar Informaci√≥n</a>
      </div>
    </div>
    <div class="hero-visual">
      <div class="hero-badge">
        <span class="badge-text">Periodismo</span>
        <span class="badge-text">Independiente</span>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-section {
    background: linear-gradient(135deg, var(--color-hero-bg) 0%, var(--color-surface-secondary) 100%);
    border-radius: var(--radius-xl);
    margin: var(--space-xl) 0 var(--space-3xl) 0;
    overflow: hidden;
    position: relative;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 80%, rgba(46, 160, 67, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(9, 105, 218, 0.1) 0%, transparent 50%);
    pointer-events: none;
  }

  .hero-container {
    display: grid;
    grid-template-columns: 1fr auto;
    align-items: center;
    gap: var(--space-3xl);
    padding: var(--space-3xl) var(--space-xl);
    position: relative;
    z-index: 1;
  }

  .hero-content {
    max-width: 600px;
  }

  .hero-title {
    font-family: var(--font-serif);
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: var(--space-lg);
    color: var(--color-text-primary);
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, var(--color-text-primary) 0%, var(--color-accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: clamp(1.1rem, 2.5vw, 1.3rem);
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-2xl);
    font-weight: 400;
  }

  .hero-actions {
    display: flex;
    gap: var(--space-lg);
    flex-wrap: wrap;
  }

  .hero-visual {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-badge {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-xl);
    background: var(--color-surface-primary);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
    transform: rotate(-5deg);
    transition: transform var(--transition-slow);
  }

  .hero-badge:hover {
    transform: rotate(0deg) scale(1.05);
  }

  .badge-text {
    font-family: var(--font-serif);
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-align: center;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-container {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
      padding: var(--space-xl) var(--space-md);
      text-align: center;
    }

    .hero-actions {
      justify-content: center;
    }

    .hero-visual {
      order: -1;
    }

    .hero-badge {
      transform: rotate(0deg);
      padding: var(--space-lg);
    }

    .badge-text {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .hero-actions {
      flex-direction: column;
      align-items: center;
    }

    .button {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }
  }
</style>