---
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="footer-container">
    <div class="footer-content">
      <div class="footer-brand">
        <h3 class="brand-title">Periodismo Independiente Quintana Roo</h3>
        <p class="brand-description">
          Investigación, transparencia y denuncia al servicio de la verdad.
        </p>
      </div>
      
      <div class="footer-links">
        <div class="link-group">
          <h4 class="group-title">Navegación</h4>
          <ul class="link-list">
            <li><a href="/series">Series</a></li>
            <li><a href="/contact">Contacto</a></li>
            <li><a href="/leak">Leaks</a></li>
            <li><a href="/donate">Donar</a></li>
          </ul>
        </div>
        
        <div class="link-group">
          <h4 class="group-title">Contacto Seguro</h4>
          <ul class="link-list">
            <li><a href="mailto:periodista@protonmail.com">Email</a></li>
            <li><a href="https://signal.me/#p/+529991234567" target="_blank" rel="noopener">Signal</a></li>
            <li><a href="https://t.me/aliasperiodista" target="_blank" rel="noopener">Telegram</a></li>
          </ul>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p class="copyright">
        &copy; {currentYear} Periodismo Independiente Quintana Roo
      </p>
      <p class="tech-note">
        Hecho con <span class="heart">♥</span> y Astro
      </p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: var(--color-surface-primary);
    border-top: 1px solid var(--color-border);
    margin-top: var(--space-3xl);
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--space-3xl) var(--space-xl) var(--space-xl);
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: var(--space-3xl);
    margin-bottom: var(--space-2xl);
  }

  .footer-brand {
    max-width: 400px;
  }

  .brand-title {
    font-family: var(--font-serif);
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0 0 var(--space-md) 0;
  }

  .brand-description {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  .footer-links {
    display: flex;
    gap: var(--space-2xl);
  }

  .link-group {
    min-width: 140px;
  }

  .group-title {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-text-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 var(--space-md) 0;
  }

  .link-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .link-list a {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color var(--transition-fast);
  }

  .link-list a:hover {
    color: var(--color-accent);
    text-decoration: none;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-border);
    gap: var(--space-lg);
  }

  .copyright,
  .tech-note {
    color: var(--color-text-tertiary);
    font-size: 0.85rem;
    margin: 0;
  }

  .heart {
    color: var(--color-danger);
    animation: heartbeat 2s ease-in-out infinite;
  }

  @keyframes heartbeat {
    0%, 50%, 100% {
      transform: scale(1);
    }
    25%, 75% {
      transform: scale(1.1);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .footer-container {
      padding: var(--space-2xl) var(--space-md) var(--space-xl);
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: var(--space-2xl);
    }

    .footer-links {
      flex-direction: column;
      gap: var(--space-xl);
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
      gap: var(--space-sm);
    }
  }

  @media (max-width: 480px) {
    .footer-links {
      flex-direction: column;
      gap: var(--space-lg);
    }

    .link-group {
      min-width: auto;
    }
  }
</style>