---
const { title, description, articles = [], cover, link } = Astro.props;
---

<article class="series-card">
  <div class="card-header">
    {cover && (
      <div class="card-image">
        <img src={cover} alt={`Portada serie ${title}`} loading="lazy" />
        <div class="image-overlay">
          <span class="overlay-text">Ver Serie</span>
        </div>
      </div>
    )}
  </div>
  
  <div class="card-content">
    <div class="card-main">
      <h2 class="card-title">
        <a href={link} class="title-link">{title}</a>
      </h2>
      <p class="card-description">{description}</p>
    </div>
    
    <div class="card-articles">
      <h3 class="articles-title">Art√≠culos recientes</h3>
      <ul class="articles-list">
        {articles.slice(0, 3).map(article => (
          <li class="article-item">
            <a href={article.link} class="article-link">
              <span class="article-title">{article.title}</span>
              <time class="article-date" datetime={article.date}>
                {new Date(article.date).toLocaleDateString('es-ES', { 
                  year: 'numeric', 
                  month: 'short', 
                  day: 'numeric' 
                })}
              </time>
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
  
  <div class="card-footer">
    <a href={link} class="read-more-link">
      Leer serie completa
      <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
        <path d="M13.25 10.75H6a.75.75 0 000 1.5h7.25v2.69l3.72-3.72a.75.75 0 000-1.06l-3.72-3.72v2.69z"/>
      </svg>
    </a>
  </div>
</article>

<style>
  .series-card {
    background: var(--color-surface-primary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-normal);
    box-shadow: var(--shadow-sm);
    display: flex;
    flex-direction: column;
    height: 100%;
    position: relative;
  }

  .series-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-accent);
  }

  .card-header {
    position: relative;
    overflow: hidden;
  }

  .card-image {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .series-card:hover .card-image img {
    transform: scale(1.05);
  }

  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--color-overlay);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity var(--transition-normal);
  }

  .series-card:hover .image-overlay {
    opacity: 1;
  }

  .overlay-text {
    color: var(--color-text-inverse);
    font-weight: 600;
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .card-content {
    padding: var(--space-xl);
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .card-main {
    flex: 1;
  }

  .card-title {
    font-family: var(--font-serif);
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 var(--space-md) 0;
    line-height: 1.3;
  }

  .title-link {
    color: var(--color-text-primary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .title-link:hover {
    color: var(--color-accent);
    text-decoration: none;
  }

  .card-description {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
    font-size: 1rem;
  }

  .card-articles {
    border-top: 1px solid var(--color-border);
    padding-top: var(--space-lg);
  }

  .articles-title {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 var(--space-md) 0;
  }

  .articles-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .article-item {
    margin: 0;
  }

  .article-link {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-md);
    padding: var(--space-sm);
    border-radius: var(--radius-sm);
    text-decoration: none;
    transition: background-color var(--transition-fast);
  }

  .article-link:hover {
    background: var(--color-surface-secondary);
    text-decoration: none;
  }

  .article-title {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    line-height: 1.4;
    flex: 1;
    transition: color var(--transition-fast);
  }

  .article-link:hover .article-title {
    color: var(--color-accent);
  }

  .article-date {
    color: var(--color-text-tertiary);
    font-size: 0.8rem;
    font-weight: 500;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .card-footer {
    padding: 0 var(--space-xl) var(--space-xl);
  }

  .read-more-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--color-accent);
    font-weight: 600;
    font-size: 0.9rem;
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .read-more-link:hover {
    color: var(--color-accent-hover);
    text-decoration: none;
    transform: translateX(4px);
  }

  .read-more-link svg {
    transition: transform var(--transition-fast);
  }

  .read-more-link:hover svg {
    transform: translateX(2px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .card-content {
      padding: var(--space-lg);
    }

    .card-footer {
      padding: 0 var(--space-lg) var(--space-lg);
    }

    .card-image {
      height: 160px;
    }

    .card-title {
      font-size: 1.3rem;
    }
  }
</style>