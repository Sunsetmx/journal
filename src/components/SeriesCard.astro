---
const { title, description, articles = [], cover, link } = Astro.props;
---
<article class="series-card" style="background:var(--color-card);border-radius:10px;box-shadow:0 2px 10px 0 rgba(44,62,80,0.07);padding:2rem;max-width:410px;width:100%;display:flex;flex-direction:column;justify-content:space-between;transition:box-shadow .2s;border:1px solid var(--color-border);">
  {cover && <img src={cover} alt={`Portada serie ${title}`} style="width:100%;max-height:180px;object-fit:cover;border-radius:8px;margin-bottom:1em;" />}
  <div>
    <h2 style="font-family:var(--font-serif);font-size:1.4em;margin:0 0 0.3em 0;"><a href={link} style="text-decoration:none;color:inherit;">{title}</a></h2>
    <p style="color:var(--color-neutral);margin-bottom:0.9em;">{description}</p>
  </div>
  <ul style="list-style:none;padding:0;margin:0;">
    {articles.slice(0, 2).map(article => (
      <li style="margin-bottom:0.5em;">
        <span style="font-size:0.93em;"><a href={article.link} style="color:var(--color-accent);">{article.title}</a></span>
        <span style="color:var(--color-neutral);font-size:0.83em;margin-left:.5em;">({article.date})</span>
      </li>
    ))}
  </ul>
</article>